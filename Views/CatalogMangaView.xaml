<UserControl x:Class="MangaMate.Views.CatalogMangaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangaMate.Views"
             xmlns:viewModel="clr-namespace:MangaMate.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:CatalogMangasViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search and Filters -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="300" Height="30" Margin="5"
                     Padding="5" FontSize="14"
                     />

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <ComboBox ItemsSource="{Binding BookStates}" DisplayMemberPath="Name"
                          SelectedItem="{Binding SelectedBookState}"
                          Width="150" Margin="5" Padding="5"
                          />

                <ComboBox ItemsSource="{Binding Genres}" DisplayMemberPath="Name"
                          SelectedItem="{Binding SelectedGenre}"
                          Width="150" Margin="5" Padding="5"
                          />

                <TextBox Text="{Binding SelectedYear, UpdateSourceTrigger=PropertyChanged}"
                         Width="100" Margin="5" Padding="5"
                         />

                <TextBox Text="{Binding MinRating, UpdateSourceTrigger=PropertyChanged}"
                         Width="100" Margin="5" Padding="5"
                         />
            </StackPanel>
        </StackPanel>

        <!-- Manga Grid -->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding Mangas}" Margin="10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="150" Height="220" Margin="10" 
                            BorderBrush="#A03030" BorderThickness="1"
                            CornerRadius="5">
                        <Button Command="{Binding DataContext.OpenMangaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource ImageButtonStyle}">
                            <StackPanel>
                                <Image Source="{Binding Avatar, Converter={StaticResource ByteArrayToImageConverter}}"
                                       Width="130" Height="150" Margin="5"
                                       Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Title}" Margin="5" 
                                           TextWrapping="Wrap" MaxWidth="130"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>

