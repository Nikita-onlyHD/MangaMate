<UserControl x:Class="MangaMate.Views.CatalogMangaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangaMate.Views"
             xmlns:viewModel="clr-namespace:MangaMate.ViewModels"
             xmlns:conv="clr-namespace:MangaMate"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:CatalogMangasViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Поиск + фильтры -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox Width="200" Margin="0 0 10 0" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

            <ComboBox Width="120" Margin="0 0 10 0"
                      SelectedItem="{Binding SelectedYear}">
                <ComboBox.ItemsSource>
                    <!-- простые года -->
                    <x:Array Type="{x:Type sys:Int32}" 
                             xmlns:sys="clr-namespace:System;assembly=mscorlib">
                        <!-- … -->
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>

            <ComboBox Width="140" Margin="0 0 10 0"
                      ItemsSource="{Binding Source={x:Static local:LookupData.BookStates}}"
                      SelectedItem="{Binding SelectedState}"
                      DisplayMemberPath="Name"/>

            <!-- жанры – чек-лист -->
            <ItemsControl ItemsSource="{Binding AllGenres}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}"
                                  IsChecked="{Binding DataContext.SelectedGenres, 
                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                        Mode=TwoWay,
                                        Converter={StaticResource InCollectionConverter},
                                        ConverterParameter={Binding}}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Список тайтлов -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Mangas}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type db:Book}">
                        <Border Margin="5" Width="160" Height="280"
                                Cursor="Hand" MouseLeftButtonUp=
                                    "{Binding DataContext.OpenDetailCommand,
                                      RelativeSource={RelativeSource AncestorType=UserControl},
                                      Mode=OneWay}">
                            <StackPanel>
                                <Image Height="200" Source="{Binding Avatar, Converter={StaticResource ByteToImage}}"/>
                                <TextBlock Text="{Binding Title}" TextWrapping="Wrap" 
                                           FontWeight="SemiBold" Margin="0 5 0 0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

