<UserControl
    x:Class="MangaMate.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MangaMate.Views"
    Background="#1A0000">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button 
                    Command="{Binding ChangeViewCommand}"
                    Content="Вход"
                    Foreground="#B54848"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="20"
                    Margin="0,0,20,0"
                    Cursor="Hand"/>
                <TextBlock Text="Регистрация" Foreground="#B54848" FontSize="20" TextDecorations="Underline" FontWeight="Bold"/>
            </StackPanel>

            <!-- Никнейм -->
            <TextBlock Text="Login:"
                Margin="10,10,5,0"
                Foreground="White"
                FontSize="20"
                FontWeight="Medium"
                FontFamily="Aral black"/>
            <TextBox 
                Text="{Binding Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,10" 
                Height="30" 
                FontSize="16"
                Foreground="#B54848"
                Background="Transparent"
                BorderBrush="#B54848" 
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

            <!-- Email -->
            <TextBlock Text="Почта:"
               Margin="10,10,5,0"
               Foreground="White"
               FontSize="20"
               FontWeight="Medium"
               FontFamily="Aral black"/>
            <TextBox 
                Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,10" Height="30" FontSize="16"
                Foreground="#B54848" Background="Transparent"
                BorderBrush="#B54848" BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль:"
               Margin="10,10,5,0"
               Foreground="White"
               FontSize="20"
               FontWeight="Medium"
               FontFamily="Aral black"/>
            <TextBox 
                Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,10" Height="30" FontSize="16"
                Foreground="#B54848" Background="Transparent"
                BorderBrush="#B54848" BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"/>
            <!--<PasswordBox
                Password="{Binding Password}"
                PasswordChar="●"
                Margin="0,0,0,20"
                Height="30"
                FontSize="16"
                Foreground="#B54848" 
                Background="Transparent"
                BorderBrush="#B54848"
                BorderThickness="2"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Tag="Пароль"
                x:Name="LoginPasswordBox"/> -->

            <Button
                Command="{Binding RegisterCommand}"
                Content="Зарегистрироваться"
                Height="40"
                Background="#B54848"
                Foreground="#1A0000"
                FontSize="18"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"/>
        </StackPanel>
    </Grid>
</UserControl>
