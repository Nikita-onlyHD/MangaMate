<UserControl x:Class="MangaMate.Views.MangaDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MangaMate.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка назад и навигация -->
        <Grid Grid.Row="0" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка назад -->
            <Button Grid.Column="0" 
                    Content="←" 
                    FontSize="24" 
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource MenuButtonStyle}" 
                    Width="50" 
                    Height="50"/>

            <!-- Кнопка "О тайтле" -->
            <Border Grid.Column="1" 
                    BorderBrush="#A03030" 
                    BorderThickness="0,0,0,2" 
                    Margin="50,0,0,0">
                <Button Content="О тайтле" 
                        Command="{Binding ShowAboutTabCommand}"
                        Style="{StaticResource MenuButtonStyle}" 
                        Background="{Binding IsAboutTabSelected, Converter={StaticResource BoolToColorConverter}}"
                        HorizontalAlignment="Center" 
                        Padding="20,10"/>
            </Border>

            <!-- Разделитель -->
            <TextBlock Grid.Column="2" 
                       Text="📖" 
                       FontSize="24" 
                       Foreground="#A03030" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="20,0"/>

            <!-- Кнопка "Главы" -->
            <Border Grid.Column="3" 
                    BorderBrush="#A03030" 
                    BorderThickness="0,0,0,2">
                <Button Content="Главы" 
                        Command="{Binding ShowChaptersTabCommand}"
                        Style="{StaticResource MenuButtonStyle}" 
                        Background="{Binding IsChaptersTabSelected, Converter={StaticResource BoolToColorConverter}}"
                        HorizontalAlignment="Center" 
                        Padding="20,10"/>
            </Border>

            <!-- Кнопка настроек -->
            <Button Grid.Column="4" 
                    Content="⚙" 
                    FontSize="24" 
                    Style="{StaticResource MenuButtonStyle}" 
                    Width="50" 
                    Height="50" 
                    Margin="50,0,0,0"/>
        </Grid>

        <!-- Контент вкладки "О тайтле" -->
        <Grid Grid.Row="2" Margin="20" Visibility="{Binding IsAboutTabSelected, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Обложка -->
            <Border Grid.Column="0" 
                    Background="#A03030" 
                    CornerRadius="15" 
                    Height="400" 
                    VerticalAlignment="Top">
                <Image Source="{Binding MangaAvatar}" 
                       Stretch="UniformToFill"/>
            </Border>

            <!-- Основная информация -->
            <StackPanel Grid.Column="1" Margin="30,0">

                <!-- Описание -->
                <TextBlock Text="Описание" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#A03030" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="{Binding MangaDescription}" 
                           FontSize="14" 
                           Foreground="White" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,20"/>

                <!-- Жанры -->
                <TextBlock Text="Жанры" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#A03030" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="{Binding MangaGenres}" 
                           FontSize="14" 
                           Foreground="White" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,20"/>

                <!-- Оценки пользователей -->
                <TextBlock Text="Оценки пользователей" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#A03030" 
                           Margin="0,0,0,10"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Рейтинги -->
                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="5 ⭐" Foreground="White" Width="50"/>
                            <TextBlock Text="25" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="4 ⭐" Foreground="White" Width="50"/>
                            <TextBlock Text="8" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="3 ⭐" Foreground="White" Width="50"/>
                            <TextBlock Text="0" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="2 ⭐" Foreground="White" Width="50"/>
                            <TextBlock Text="0" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="1 ⭐" Foreground="White" Width="50"/>
                            <TextBlock Text="2" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Возможность оценить -->
                <TextBlock Text="Добавить оценку" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#A03030" 
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="1⭐" Command="{Binding RateMangaCommand}" CommandParameter="1" Style="{StaticResource MenuButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="2⭐" Command="{Binding RateMangaCommand}" CommandParameter="2" Style="{StaticResource MenuButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="3⭐" Command="{Binding RateMangaCommand}" CommandParameter="3" Style="{StaticResource MenuButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="4⭐" Command="{Binding RateMangaCommand}" CommandParameter="4" Style="{StaticResource MenuButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="5⭐" Command="{Binding RateMangaCommand}" CommandParameter="5" Style="{StaticResource MenuButtonStyle}"/>
                </StackPanel>
            </StackPanel>

            <!-- Боковая панель -->
            <StackPanel Grid.Column="2">

                <!-- Прогресс чтения -->
                <Border Background="#3D1010" 
                        CornerRadius="10" 
                        Padding="15" 
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Читать 61/66" 
                                   FontSize="16" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10"/>

                        <Button Content="Добавить в ▼" 
                                Style="{StaticResource MenuButtonStyle}" 
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Статус пользователя -->
                <Border Background="#3D1010" 
                        CornerRadius="10" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Статус:" 
                                   FontSize="14" 
                                   Foreground="#A03030" 
                                   Margin="0,0,0,5"/>

                        <ComboBox ItemsSource="{Binding UserStates}" 
                                  SelectedItem="{Binding SelectedUserState}"
                                  DisplayMemberPath="Name"
                                  Background="#2D0909" 
                                  Foreground="White" 
                                  BorderBrush="#A03030"
                                  Margin="0,0,0,10"/>

                        <Button Content="Обновить статус" 
                                Command="{Binding UpdateUserStatusCommand}"
                                Style="{StaticResource MenuButtonStyle}"/>

                        <CheckBox Content="В избранном" 
                                  IsChecked="{Binding IsFavorite}"
                                  Command="{Binding ToggleFavoriteCommand}"
                                  Foreground="White" 
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Контент вкладки "Главы" (будет отображаться через отдельный UserControl) -->
        <ContentControl Grid.Row="2" 
                        Content="{Binding ChaptersViewModel}" 
                        Visibility="{Binding IsChaptersTabSelected, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</UserControl>
